<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vnbamboo.huchat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/roundiconhuchat"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/squareiconhuchat"
        android:theme="@style/AppTheme">
        android:supportsRtl="true"
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.ChatActivity"/>
        <activity android:name=".activity.CreateNewMessageActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.EditProfileActivity" />
        <activity android:name=".activity.EditProfileSubActivity"/>
        <activity android:name=".activity.CreateNewGroupActivity"/>
        <service
            android:name=".helper.ServiceConnection"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>