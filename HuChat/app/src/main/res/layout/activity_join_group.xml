<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:clipToPadding="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="@dimen/high_2x4">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/grayColor"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnBack"
                android:layout_width="20dp"
                android:layout_margin="10dp"
                android:layout_height="20dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/back_arrow"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Vào nhóm bí mật"
                android:textColor="#232628"
                android:textStyle="bold"
                android:elevation="@dimen/high_2x1"
                android:textSize="18dp"
                android:fontFamily="@font/notosan_regular"
                android:paddingRight="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_weight="3"
        android:background="@color/grayColor"
        android:gravity=""
        android:clipToPadding="false"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            app:hintEnabled="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/singleLine"
            android:elevation="@dimen/high_2x1"
            android:layout_marginBottom="15dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtRoomCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editTextHigh"
                android:paddingLeft="40dp"
                android:textIsSelectable="true"
                android:singleLine="true"
                android:fontFamily="@font/notosan_regular"
                android:maxLength="20"
                android:background="@android:color/transparent"
                android:hint="Nhập mã nhóm"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            app:hintEnabled="true"
            android:layout_height="wrap_content"
            android:elevation="@dimen/high_2x1"
            android:layout_marginBottom="15dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editTextHigh"
                android:paddingLeft="40dp"
                android:inputType="textPassword"
                android:textIsSelectable="true"
                android:fontFamily="@font/notosan_regular"
                android:maxLength="32"
                android:background="@android:color/transparent"
                android:hint="Nhập mật khẩu"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnJoin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineHigh"
        android:layout_gravity="bottom"
        android:background="@color/lightestGreenColor"
        android:elevation="@dimen/high_2x1"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Vào nhóm"
        android:textAllCaps="false"
        android:textColor="@color/blackTextColor" />
</LinearLayout>