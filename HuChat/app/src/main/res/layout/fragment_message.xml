<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:context=".fragment.MessageFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="false">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Tin nhắn gần đây"
            android:textColor="@color/blackTextColor"
            android:textStyle="bold"
            android:textSize="18dp"
            android:fontFamily="@font/notosan_regular"
            android:background="@color/grayColor"
            android:elevation="@dimen/high_2x2"/>
        <android.support.v7.widget.RecyclerView
            android:elevation="@dimen/high_2x1"
            android:id="@+id/rclViewCardMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/blackTextColor"
            android:dividerHeight="2dp">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <io.github.yavski.fabspeeddial.FabSpeedDial
        android:id="@+id/btnCreate"
        android:elevation="@dimen/high_2x6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:fabDrawable="@drawable/ic_create_black_24dp"
        app:fabGravity="bottom_end"
        app:fabMenu="@menu/menu_fb_create"
        android:layout_marginBottom="@dimen/menu_bar_high"
        app:miniFabBackgroundTint="@android:color/white"
        app:miniFabDrawableTint="?attr/colorPrimaryDark"
        app:miniFabTitleTextColor="?attr/colorPrimaryDark" />
</FrameLayout>
