<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#e8e8e8"
        android:paddingBottom="20dp"
        android:layout_marginBottom="50dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/roundiconhuchat"
            android:layout_weight="1"
            app:civ_border_width="2dp"
            app:civ_border_color="#ffffff"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Thành Long"
            android:textSize="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/time_new_roman"
            android:textColor="#535353"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tamdaulong207@gmail.com"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/time_new_roman"
            android:textColor="#535353"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0966988356"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#535353"
            android:fontFamily="@font/time_new_roman"
            android:layout_margin="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button_logout"
                android:padding="10dp"
                android:text="Sửa thông tin "
                android:textAllCaps="false"
                android:textColor="#e8e8e8"
                android:layout_gravity="top"
                android:layout_marginRight="10dp"
                />
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button_logout"
                android:padding="10dp"
                android:text="Đăng xuất"
                android:textAllCaps="false"
                android:textColor="#e8e8e8"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>


    </LinearLayout>






</FrameLayout>
