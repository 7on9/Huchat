<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:clipToPadding="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="@dimen/high_2x4">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/grayColor"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnBack"
                android:layout_width="20dp"
                android:layout_margin="10dp"
                android:layout_height="20dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/back_arrow"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nhóm mới"
                android:textColor="#232628"
                android:textStyle="bold"
                android:textSize="18dp"
                android:fontFamily="@font/notosan_regular"
                android:paddingRight="10dp"
                android:paddingLeft="45dp"/>
        </LinearLayout>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/roundiconhuchat"
        android:layout_weight=""
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:layout_marginTop="20dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/lineHigh"
        android:layout_weight="4"
        android:background="@color/grayColor"
        android:gravity=""
        android:clipToPadding="false"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            app:hintEnabled="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/singleLine"
            android:elevation="@dimen/high_2x1"
            android:layout_marginBottom="15dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtGroupName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editTextHigh"
                android:paddingLeft="10dp"
                android:textIsSelectable="true"
                android:fontFamily="@font/notosan_regular"
                android:maxLength="20"
                android:background="@android:color/transparent"
                android:hint="Nhập tên nhóm"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            app:hintEnabled="true"
            android:layout_height="wrap_content"
            android:elevation="@dimen/high_2x1"
            android:layout_marginBottom="15dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editTextHigh"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:textIsSelectable="true"
                android:fontFamily="@font/notosan_regular"
                android:maxLength="32"
                android:background="@android:color/transparent"
                android:hint="Nhập mật khẩu"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            app:hintEnabled="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/singleLine"
            android:elevation="@dimen/high_2x1"
            android:layout_marginBottom="15dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtReTypePassword"
                android:textCursorDrawable="@null"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editTextHigh"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:textIsSelectable="true"
                android:fontFamily="@font/notosan_regular"
                android:maxLength="20"
                android:background="@android:color/transparent"
                android:hint="Nhập lại mật khẩu"
                />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHigh"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nhóm bí mật"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textColor="#9e9e9e"
                android:textSize="20dp"
                />
            <Switch
                android:id="@+id/swPrivate"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="@color/lightGreenColor"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:textColor="@color/title_text_color"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineHigh"
        android:layout_gravity="bottom"
        android:background="@color/lightestGreenColor"
        android:elevation="@dimen/high_2x1"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Tạo nhóm chat"
        android:textAllCaps="false"
        android:textColor="@color/blackTextColor" />
</LinearLayout>